# src/tests/test_agents.py

import pytest
from src.agents.lead_scoring_agent import LeadScoringAgent

def test_scoring():
    agent = LeadScoringAgent()
    result = agent.run({
        "email": "a@b.com",
        "company_size": 2000,
        "annual_revenue": 2e6,
        "industry": "Software",
        "engagement_level": 15
    })
    assert result["score"] >= 75  # 30 + 30 + 20 + 15
