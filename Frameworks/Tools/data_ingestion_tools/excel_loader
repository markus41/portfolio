# Tools/data_ingestion_tools/excel_loader.py

import pandas as pd
from ..Engines.logger import get_logger

logger = get_logger(__name__)

class ExcelLoader:
    def load(self, file_path: str, sheet_name=0):
        """
        Load an Excel file (.xls, .xlsx) into a DataFrame.
        """
        logger.info(f"Loading Excel sheet '{sheet_name}' from {file_path}")
        df = pd.read_excel(file_path, sheet_name=sheet_name)
        logger.info(f"Loaded {len(df)} rows")
        return df
