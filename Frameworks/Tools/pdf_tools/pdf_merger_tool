# Tools/pdf_tools/pdf_merger_tool.py

from PyPDF2 import PdfMerger
from ..Engines.logger import get_logger

logger = get_logger(__name__)

class PDFMergerTool:
    def merge(self, input_paths: list, output_path: str) -> str:
        logger.info(f"Merging PDFs: {input_paths} â†’ {output_path}")
        merger = PdfMerger()
        for path in input_paths:
            merger.append(path)
        merger.write(output_path)
        merger.close()
        return output_path
