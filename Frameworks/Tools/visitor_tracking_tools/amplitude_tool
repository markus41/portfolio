# Tools/visitor_tracking_tools/amplitude_tool.py

from amplitude import Amplitude, BaseEvent
from ..Engines.constants import AMPLITUDE_API_KEY
from ..Engines.logger import get_logger

logger = get_logger(__name__)

class AmplitudeTool:
    """
    Track events in Amplitude.
    """

    def __init__(self):
        self.client = Amplitude(AMPLITUDE_API_KEY)

    def track(self, user_id: str, event_type: str, event_properties: dict = None):
        evt = BaseEvent(user_id=user_id, event_type=event_type, event_properties=event_properties or {})
        logger.info(f"Amplitude event: {event_type} for {user_id}")
        self.client.log(evt)
